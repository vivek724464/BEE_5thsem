generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String?
  email String @unique
  password String
  tweet Tweet[]       // tweet property of type Tweet for relation since user has many tweets so relation will be one to many
}

model Tweet{
  id Int @id @default(autoincrement())
  content String
  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)        // user property of the type User for relation 
  // onDelete cascade helps in deleting user's all tweet when user is deleted
}